vendor = true

@import '../config';

.b-login
    columns( 3 )
    line-height: 60px
    &-user
        display: inline-block

    &-user__img
        margin-right: 10px

    &-user__name
        display: inline-block
        font-size: 13px

    &__logout
        float: right
        font-size: 13px

    &__logout-link
        display: inline-block
        line-height: 13px

    &__logout-link:link
    &__logout-link:visited
    &__logout-link:active
    &__logout-link:hover
        color: #fff
        border-bottom: 1px dashed #fff
        text-decoration: none

    &__logout-link:hover
        border-bottom: none

    &__login
        float: right
    &__login-link:link
    &__login-link:visited
    &__logink-link:active
    &__login-link:hover
        color: #fff
        text-decoration: none
        font-size: 15px
        font-weight: bold
        text-align: center
        line-height: 28px
        text-shadow: 1px 1px 1px #878787
        display: inline-block
        width: 81px
        height: 28px
        border-radius: 3px
        border: solid 1px #3c7900
        box-shadow: 0px 0px 1px #8b8b8b, inset 0px 1px #e2ed4a , inset 0px 2px 4px #bad32f, inset 0px -2px 4px #9ac230/**/
        background: #abc901;
        background: -moz-linear-gradient(top,  #abc901 0%, #abc901 0%, #84b402 100%);
        background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#abc901), color-stop(0%,#abc901), color-stop(100%,#84b402));
        background: -webkit-linear-gradient(top,  #abc901 0%,#abc901 0%,#84b402 100%);
        background: -o-linear-gradient(top,  #abc901 0%,#abc901 0%,#84b402 100%);
        background: -ms-linear-gradient(top,  #abc901 0%,#abc901 0%,#84b402 100%);
        background: linear-gradient(to bottom,  #abc901 0%,#abc901 0%,#84b402 100%);
        filter: ('progid:DXImageTransform.Microsoft.gradient( startColorstr='#abc901', endColorstr='#84b402',GradientType=0 );')
    &__login-link:hover
        box-shadow: 0px 0px 2px #8b8b8b, inset 0px 1px #e2ed4a , inset 0px 2px 4px #bad32f, inset 0px -2px 4px #9ac230,/**/ inset 0px 3px 5px #d1e603 /*e5fc03*/
        
        
        background: #b5ce00;
        background: -moz-linear-gradient(top,  #b5ce00 0%, #6e9400 100%);
        background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#b5ce00), color-stop(100%,#6e9400));
        background: -webkit-linear-gradient(top,  #b5ce00 0%,#6e9400 100%);
        background: -o-linear-gradient(top,  #b5ce00 0%,#6e9400 100%);
        background: -ms-linear-gradient(top,  #b5ce00 0%,#6e9400 100%);
        background: linear-gradient(to bottom,  #b5ce00 0%,#6e9400 100%);
        filter: ('progid:DXImageTransform.Microsoft.gradient( startColorstr='#b5ce00', endColorstr='#6e9400',GradientType=0 );')